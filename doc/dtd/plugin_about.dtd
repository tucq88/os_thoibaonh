<!-- Root element -->
<!ELEMENT plugin (name, module, description, thumbnail, author, email, version, license)+>

<!-- Name of hook -->
<!ELEMENT name (#PCDATA)>

<!-- Module that hook belong to -->
<!ELEMENT module (#PCDATA)>

<!-- Description of hook -->
<!ELEMENT description (#PCDATA)>

<!-- The thumbnail URL -->
<!ELEMENT thumbnail (#PCDATA)>

<!-- Author -->
<!ELEMENT author (#PCDATA)>

<!-- Email to contact with author -->
<!ELEMENT email (#PCDATA)>

<!-- Hook version -->
<!ELEMENT version (#PCDATA)>

<!-- Hook license -->
<!ELEMENT license (#PCDATA)>
